<% layout('./layouts/boilerplate') %>
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="add">
            <h2 class="text-center">Add Blog</h2>
            <form action="/blog" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Blog Title</label>
                    <input type="text" class="form-control" name="title" id="title" placeholder="blog title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="content">Blog Content</label>
                    <textarea type="text" class="form-control" name="content" id="content" cols="40" rows="4" placeholder="blog content" required></textarea>
                </div>
                <button class="btn btn btn-outline-danger btn-block mb-5">Save</button>
            </form>
        </div>
        </div>
    </div>
</div>