<% layout('./layouts/boilerplate')%>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="add">
                <!-- <img src="https://images.unsplash.com/photo-1551582045-6ec9c11d8697?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=401&q=80"
                    alt="" class="card-img-top" /> -->
                    <h4 class="text-center">Sign up</h4>
                    <form action="/user/register" method="POST" class="validCredentials-form" novalidate>
                        <div class="mb-2">
                            <label class="form-label" for="firstname">FirstName</label>
                            <input class="form-control" type="text" id="firstname" name="firstname" required autofocus>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <div class="mb-2">
                            <label class="form-label" for="lastname">LastName</label>
                            <input class="form-control" type="text" id="lastname" minlength="1" maxlength="1" name="lastname" required>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <div class="mb-2">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <div class="mb-2">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <div class="mb-2">
                            <label class="form-label" for="contact">Contact</label>
                            <select name="countryCode" id="" >
                                <option value="India (+91)">India (+91)</option>
                                <option value="India (+91)">India (+91)</option>
                                <option value="India (+91)">India (+91)</option>
                                <option value="India (+91)">India (+91)</option>
                            </select>
                            <input class="form-control" type="text" id="contact" name="contactNumber" maxlength="10" required >
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <button class="btn btn-primary btn-block">Register</button>
                    </form>
            </div>
        </div>
    </div>
</div>