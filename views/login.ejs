<% layout('./layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-2">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="add">
                <!-- <img src="https://images.unsplash.com/photo-1551582045-6ec9c11d8697?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=401&q=80"
                    alt="" class="card-img-top" /> -->
                    <h4 class="text-center">Login</h4>
                    <form action="/user/login" method="POST" class="validCredentials-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" autofocus required>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="username" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <button class="btn btn-primary btn-block">Login</button>
                    </form>
            </div>
        </div>
    </div>
</div>